<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_getCityID"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Get City ID"
        />

    <Button
        android:id="@+id/btn_getWeatherByCityID"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather by ID"
        android:layout_below="@+id/btn_getCityID"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btn_getWeatherByCityName"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_getWeatherByCityID"
        android:layout_centerHorizontal="true"
        android:text="Weather by Name"
        />

    <EditText
        android:id="@+id/et_dataInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:hint="City Name"
        android:inputType="textPersonName"
        android:layout_below="@id/btn_getWeatherByCityName"
        />

    <ListView
        android:id="@+id/lv_weatherReports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/et_dataInput"
        />
</RelativeLayout>